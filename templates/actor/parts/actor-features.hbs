<ol class="items-list">
    {{#each features as |section id|}}
    <li class="items-header flexrow" data-item-type="{{section.type}}">
        <h3 class="item-name flexrow">{{localize section.label}}</h3>
        <div class="item-controls item-controls align-vertical-center align-center flexrow">
            <a class="item-control item-create" data-action="create" title="{{localize 'DOCUMENT.actions.create' type=''}}{{localize 'TYPES.Item.feature'}}" data-type="{{section.type}}">
                <i class="fas fa-plus"></i> {{localize "DOCUMENT.actions.new" type=""}}{{localize 'TYPES.Item.feature'}}
            </a>
        </div>
    </li>

    <ol class="item-list">
        {{#each section.items as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}" data-parent-id="{{item.parent._id}}">
            <div class="item-name flexrow">
                <img class="item-image" src="{{item.img}}" height="32" width="32" />
                <h4>{{item.name}}</h4>
            </div>
            {{!-- todo: later, add conditionals here that display based on item type --}}
            <h4 class="item-controls align-vertical-center align-center item-controls flexrow">
                <a class="item-control item-edit" data-action="edit" title="{{localize 'DOCUMENT.actions.edit' type=""}}{{localize 'TYPES.Item.feature' }}">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="item-control item-delete" data-action="delete" title="{{localize 'DOCUMENT.actions.delete' type=""}}{{localize 'TYPES.Item.feature' }}">
                    <i class="fas fa-trash"></i>
                </a>
            </h4>
        </li>
        {{/each}}
    </ol>
    {{/each}}
</ol>
