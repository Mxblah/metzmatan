<div class="ability-fields">
    {{!-- Type, Action cost, and Duration --}}
    <div class="attributes grid grid-3col">
        <div class="attribute flexrow flex-group-center">
            <label for="system.ability.type" class="resource-label">{{localize "ATTRIBUTES.abilities.type"}}</label>
            <span class="resource-value">{{system.ability.type}}</span>
        </div>

        <div class="attribute flexrow flex-group-center">
            <label for="system.ability.actions" class="resource-label">{{localize "ATTRIBUTES.abilities.actions"}}</label>
            <span class="resource-value">{{system.ability.actions}}</span>
        </div>

        <div class="attribute flexrow flex-group-center">
            <label for="system.ability.duration" class="resource-label">{{localize "ATTRIBUTES.abilities.duration"}}</label>
            <span class="resource-value">{{system.ability.duration}}</span>
        </div>
    </div>

    {{!-- Range, Target, and Cooldown --}}
    <div class="attributes grid grid-3col">
        <div class="attribute flexrow flex-group-center">
            <label for="system.ability.range" class="resource-label">{{localize "ATTRIBUTES.abilities.range"}}</label>
            <span class="resource-value">{{system.ability.range}}</span>
        </div>

        <div class="attribute flexrow flex-group-center">
            <label for="system.ability.target" class="resource-label">{{localize "ATTRIBUTES.abilities.target"}}</label>
            <span class="resource-value">{{system.ability.target}}</span>
        </div>

        <div class="attribute flexrow flex-group-center">
            <label for="system.ability.cooldown" class="resource-label">{{localize "ATTRIBUTES.abilities.cooldown"}}</label>
            <span class="resource-value">{{system.ability.cooldown}}</span>
        </div>
    </div>

</div>
{{!-- Description --}}
<h3 class="item-name">{{localize "DOCUMENT.description"}}</h3>
<div class="description">
    {{editor enrichedAbilityDescription target='system.ability.description' engine='prosemirror' button=true editable=editable}}
</div>
